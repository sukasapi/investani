<!doctype html>
<html class="no-js" lang="">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Ela Admin - HTML5 Admin Template</title>
    <meta name="description" content="Ela Admin - HTML5 Admin Template">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="apple-touch-icon" href="https://i.imgur.com/QRAUqs9.png">
    <link rel="shortcut icon" href="https://i.imgur.com/QRAUqs9.png">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/normalize.css@8.0.0/normalize.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/font-awesome@4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/lykmapipo/themify-icons@0.1.2/css/themify-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/pixeden-stroke-7-icon@1.2.3/pe-icon-7-stroke/dist/pe-icon-7-stroke.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/3.2.0/css/flag-icon.min.css">
    <link rel="stylesheet" href="/css/cs-skin-elastic.css">
    <link rel="stylesheet" href="/css/lib/datatable/dataTables.bootstrap.min.css">
    <link rel="stylesheet" href="/css/dashboard-style.css">

    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    <!-- <script type="text/javascript" src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.min.js"></script> -->
    <style>
        #bootstrap-data-table-1_filter, #bootstrap-data-table-1_paginate, #bootstrap-data-table-2_filter, #bootstrap-data-table-2_paginate, #bootstrap-data-table-3_filter, #bootstrap-data-table-3_paginate{
            text-align: right
        }
        #bootstrap-data-table-1_filter label, #bootstrap-data-table-2_filter label, #bootstrap-data-table-3_filter label{
            text-align: left;
        }
        .pagination {
            display: -webkit-inline-box;
        }
    </style>
</head>

<body>
    <!-- Left Panel -->

    <% include ../../../../partials/admin/aside-dashboard %>

    <!-- Left Panel -->

    <!-- Right Panel -->

    <div id="right-panel" class="right-panel">

        <!-- Header-->
        <% include ../../../../partials/admin/header-dashboard %>
        <!-- Header-->

        <% include ../../../../partials/admin/breadcrumbs-dashboard %>

        <div class="content">
            <div class="animated fadeIn">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h4>Profil Investor</h4>
                            </div>
                            <div class="card-body">
                                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                    <li class="nav-item">
                                        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home"
                                            role="tab" aria-controls="pills-home" aria-selected="true">Profil</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile"
                                            role="tab" aria-controls="pills-profile" aria-selected="false">Pekerjaan</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="pills-document-tab" data-toggle="pill" href="#pills-document"
                                            role="tab" aria-controls="pills-document" aria-selected="false">Dokumen</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact"
                                            role="tab" aria-controls="pills-contact" aria-selected="false">Bank</a>
                                    </li>
                                </ul>
                                <div class="tab-content" id="pills-tabContent">
                                    <div class="sufee-alert alert with-close alert-success alert-dismissible fade show" id="success-alert" style="display:none">
                                        
                                    </div>
                                    <div class="sufee-alert alert with-close alert-danger alert-dismissible fade show" id="error-alert" style="display:none">
                                    </div>
                                    <div class="tab-pane fade show active" id="pills-home" role="tabpanel"
                                        aria-labelledby="pills-home-tab">
                                        <div class="form-group">
                                            <label class=" form-control-label">Nama Lengkap</label>
                                            <input class="form-control" type="text" value="<%= user.profile[0].name %>" disabled>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-6">
                                                <label for="vat" class=" form-control-label">Nomor Handphone</label>
                                                <input class="form-control" type="text" value="<%= user.profile[0].phone %>" disabled>
                                            </div>
                                            <div class="col col-md-6">
                                                <label for="city" class=" form-control-label">Jenis Kelamin</label>
                                                <% if (user.profile[0].gender == 'male') { %>
                                                    <input class="form-control" type="text" value="Pria" disabled>
                                                <% } %>
                                                <% if (user.profile[0].gender == 'female') {%>
                                                    <input class="form-control" type="text" value="Wanita" disabled>
                                                <% } %>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Tanggal Lahir</label>
                                            <input class="form-control" type="text" value="<%= user.profile[0].birth_date.toLocaleDateString() %>" disabled>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-6">
                                                <label class=" form-control-label">Provinsi</label>
                                                <input class="form-control" type="text" value="<%= user.profile[0].province[0].province_name %>" disabled>
                                            </div>
                                            <div class="col col-md-6">
                                                <label for="city" class=" form-control-label">Kota</label>
                                                <input class="form-control" type="text" value="<%= user.profile[0].city[0].city_name %>" disabled>
                                            </div>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-6">
                                                <label for="vat" class=" form-control-label">Kecamatan</label>
                                                <input class="form-control" type="text" value="<%= user.profile[0].district[0].district_name %>" disabled>
                                            </div>
                                            <div class="col col-md-6">
                                                <label for="city" class=" form-control-label">Kelurahan</label>
                                                    <input class="form-control" type="text" value="<%= user.profile[0].sub_district[0].sub_district_name %>" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Alamat Korespondensi</label>
                                            <input class="form-control" type="text" value="<%= user.profile[0].address %>" disabled>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">
                                        <div class="form-group">
                                            <label class=" form-control-label">Pekerjaan</label>
                                            <input class="form-control" type="text" value="<%= user.occupation[0].occupation.charAt(0).toUpperCase() + user.occupation[0].occupation.slice(1) %>" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Nama Perusahaan</label>
                                            <input class="form-control" type="text" value="<%= user.occupation[0].company_name %>" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Alamat Perusahaan</label>
                                            <input class="form-control" type="text" value="<%= user.occupation[0].company_address %>" disabled>
                                        </div>
                                        <div class="row form-group">
                                            <div class="col col-md-6">
                                                <label for="vat" class=" form-control-label">Jabatan</label>
                                                <% if (user.occupation[0].position == '') { %>
                                                    <input class="form-control" type="text" value="" disabled>
                                                <% } %>
                                                <% if (user.occupation[0].position != '') { %>
                                                    <input class="form-control" type="text" value="<%= user.occupation[0].position.split('_').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>" disabled>
                                                <% } %>
                                            </div>
                                            <div class="col col-md-6">
                                                <label for="vat" class=" form-control-label">Sumber Dana</label>
                                                <input class="form-control" type="text" value="<%= user.occupation[0].income_source.split('_').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>" disabled>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Penghasilan per Bulan</label>
                                            <input class="form-control" type="text" value="<%= user.occupation[0].income.split('_').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join('-') %>" disabled>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="pills-document" role="tabpanel" aria-labelledby="pills-document-tab">
                                        
                                        <div class="form-group">
                                            <label class=" form-control-label">KTP / Paspor</label>
                                            <div class="input-group">
                                                <input class="form-control" value="<%= user.document[0].identity_number %>" disabled>
                                                <div class="input-group-btn">
                                                    <button type="button" class="btn btn-primary mb-1" data-toggle="modal" data-target="#identity-image-modal">
                                                        Lihat
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">NPWP</label>
                                            <div class="input-group">
                                                <input class="form-control" value="<%= user.document[0].npwp_number %>" disabled>
                                                <div class="input-group-btn">
                                                    <button type="button" class="btn btn-primary mb-1" data-toggle="modal" data-target="#npwp-image-modal">
                                                        Lihat
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">
                                        <div class="form-group">
                                            <label class=" form-control-label">Nama Bank</label>
                                            <input class="form-control" type="text" value="<%= user.bank[0].bank_name.split('_').map(word => word.charAt(0).toUpperCase() + word.slice(1)).join(' ') %>" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Nama Pemilik Rekening</label>
                                            <input class="form-control" type="text" value="<%= user.bank[0].account_name %>" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Nomor Rekening</label>
                                            <input class="form-control" type="text" value="<%= user.bank[0].account_number %>" disabled>
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Cabang</label>
                                            <input class="form-control" type="text" value="<%= user.bank[0].branch %>" disabled>
                                        </div>
                                    </div>
                                </div>
                                
                                <div>
                                    <% if (user.user_type[0].status == 'waiting') { %>
                                        <button id="verification-button" class="btn btn-lg btn-info btn-block">
                                            <span id="verification-button-text">Verifikasi</span>
                                            <span id="verification-button-process" style="display:none;">Sedang memproses...</span>
                                        </button>
                                    <% } %>
                                    <% if (user.user_type[0].status == 'verified') { %>
                                        <button id="verification-button" class="btn btn-lg btn-info btn-block" disabled>
                                            <span id="verification-button-text">Terverifikasi</span>
                                        </button>
                                    <% } %>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <section class="card">
                            <div class="twt-feed blue-bg">
                                <div class="media">
                                    <a href="#">
                                        <img class="align-self-center rounded-circle mr-3" style="width:85px; height:85px;"
                                            alt="" src="/images/admin.jpg">
                                    </a>
                                    <div class="media-body">
                                        <h2 class="text-white display-6"><%= user.profile[0].name %></h2>
                                        <p class="text-light"><%= user.occupation[0].occupation.charAt(0).toUpperCase() + user.occupation[0].occupation.slice(1) %></p>
                                    </div>
                                </div>
                            </div>
                            <div class="weather-category twt-category">
                                <ul>
                                    <li class="active">
                                        <h5>750</h5>
                                        Tweets
                                    </li>
                                    <li>
                                        <h5>865</h5>
                                        Following
                                    </li>
                                    <li>
                                        <h5>3645</h5>
                                        Followers
                                    </li>
                                </ul>
                            </div>
                            <div class="twt-write col-sm-12">
                                <textarea placeholder="Write your Tweet and Enter" rows="1" class="form-control t-text-area"></textarea>
                            </div>
                            <footer class="twt-footer">
                                <a href="#"><i class="fa fa-map-marker"></i></a>
                                <%= user.profile[0].city[0].city_name %>
                                <span class="pull-right">
                                    Bergabung pada <%= user.createdAt.toLocaleDateString() %>
                                </span>
                            </footer>
                        </section>
                    </div>
                </div>
                <div class="modal fade" id="identity-image-modal" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-sm" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="smallmodalLabel">KTP / Paspor</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card">
                                            <img class="card-img-top" src="/admin/user/get-image/<%= user._id %>/<%= user.document[0].identity_image %>" alt="Card image cap">
                                        </div>
                                        <div class="card">
                                            <img class="card-img-top" src="/admin/user/get-image/<%= user._id %>/<%= user.document[0].identity_selfie_image %>" alt="Card image cap">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal fade" id="npwp-image-modal" tabindex="-1" role="dialog" aria-labelledby="smallmodalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-sm" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="smallmodalLabel">NPWP</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="card">
                                            <img class="card-img-top" src="/admin/user/get-image/<%= user.document[0].npwp_image %>" alt="Card image cap">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Tutup</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- .animated -->
        </div><!-- .content -->

        <div class="clearfix"></div>

        <% include ../../../../partials/admin/footer-dashboard %>

    </div><!-- /#right-panel -->

    <!-- Right Panel -->

    <!-- Scripts -->
	<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
	 crossorigin="anonymous"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
	 crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-match-height@0.7.2/dist/jquery.matchHeight.min.js"></script>
    <script src="/js/individual-main.js"></script>

    <script src="/js/datatables.min.js"></script>
    <script src="/js/dataTables.bootstrap.min.js"></script>
    <script src="/js/dataTables.buttons.min.js"></script>
    <script src="/js/buttons.bootstrap.min.js"></script>
    <script src="/js/jszip.min.js"></script>
    <script src="/js/vfs_fonts.js"></script>
    <script src="/js/buttons.html5.min.js"></script>
    <script src="/js/buttons.print.min.js"></script>
    <script src="/js/buttons.colVis.min.js"></script>
    <script src="/js/datatables-init.js"></script>

    <script>
        $('#verification-button').on('click', function (event) {
            $('#verification-button').attr('disabled', 'disabled');
            $('#verification-button-process').show();
            $('#verification-button-text').hide();
            $.ajax({
                type: 'post',
                url: '/admin/user/investor/individual/verify/<%= user._id %>',
                success: function(data, status) {
                    if(data.success == true) {
                        $('#verification-button-process').hide();
                        $('#verification-button-text').show();
                        $('#verification-button-text').text('Terverifikasi');
                        $('#success-alert').show();
                        $('#success-alert').append(data.message+'<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>');
                    }
                    else {
                        $('#verification-button-process').hide();
                        $('#verification-button-text').show();
                        $('#error-alert').show();
                        $('#error-alert').append(data.message+'<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">×</span></button>');
                    }
                }
            })
        });
    </script>
</body>

</html>