        input[type=number]::-webkit-inner-spin-button,
        input[type=number]::-webkit-outer-spin-button {
            -webkit-appearance: none;
            margin: 0;
        }

        .form-control-file {
            width: 100%;
            padding: 5px 10px;
            border: 1px solid #e5e5e5;
            border-radius: 5px;
        }

        .ck-editor__editable {
            min-height: 300px;
        }

